<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_changing">

    <TextView
        android:id="@+id/nameText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/nameText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="180dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:text="Назад"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="665dp" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:text="Редактировать"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/listFindButton"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        tools:layout_editor_absoluteY="665dp" />

    <Button
        android:id="@+id/listFindButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/red_1"
        android:text="удалить"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="665dp" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/surnameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фамилия:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/birthDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата рождения:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/phoneNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер телефона:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/surenameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="114dp" />

</androidx.constraintlayout.widget.ConstraintLayout>